generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./.tmp/db.sqlite"
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  name      String
  hash      String
  tel       String?     @default("")
  whatsapp  String?     @default("")
  telegram  String?     @default("")
  ads       Ad[]
  favorites Favorites[]
}

model Ad {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  name        String?
  type        String      @default("cat")
  breed       String
  description String
  email       String
  tel         String
  whatsapp    String?     @default("")
  telegram    String?     @default("")
  price       Float
  birthday    DateTime    @default(now())
  images      Image[]
  isPublished Boolean
  owner       User        @relation(fields: [ownerId], references: [id])
  ownerId     String
  favorites   Favorites[]
}

model Image {
  id        Int    @id @default(autoincrement())
  src       String
  thumbnail String
  ad        Ad     @relation(fields: [adId], references: [id], onDelete: Cascade)
  adId      Int
}

model Favorites {
  id      Int    @id @default(autoincrement())
  ad      Ad     @relation(fields: [adId], references: [id], onDelete: Cascade)
  adId    Int
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String

  @@unique([adId, ownerId])
  @@index([adId, ownerId])
}

