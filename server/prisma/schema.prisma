generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String
  hash     String
  tel      String? @default("")
  whatsup  String? @default("")
  telegram String? @default("")
  ads      Ad[]
}

model Ad {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String?
  type        AnimalType @default(cat)
  breed       String
  description String
  email       String
  tel         String
  price       Int
  birthday    DateTime   @default(now())
  images      Image[]
  isPublished Boolean
  owner       User       @relation(fields: [ownerId], references: [id])
  ownerId     String
}

model Image {
  id        Int    @id @default(autoincrement())
  src       String
  thumbnail String
  ad        Ad     @relation(fields: [adId], references: [id], onDelete: Cascade)
  adId      Int
}

enum AnimalType {
  cat
  dog
  bird
  aquarium
  rodent
}
